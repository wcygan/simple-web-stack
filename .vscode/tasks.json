            "label": "deno: up",
            "type": "shell",
            "command": "deno task up",
            "problemMatcher": []
        },
        {
            "label": "deno: down",
            "type": "shell",
            "command": "deno task down",
            "problemMatcher": []
        },
        {
            "label": "deno: ci:backend",
            "type": "shell",
            "command": "deno task ci:backend",
            "problemMatcher": []
        },
        {
            "label": "deno: ci:frontend",
            "type": "shell",
            "command": "deno task ci:frontend",
            "problemMatcher": []
        },
        {
            "label": "deno: test:backend",
            "type": "shell",
            "command": "deno task test:backend",
            "problemMatcher": []
