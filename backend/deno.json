{
    "tasks": {
        "setup": "deno run --allow-read --allow-write --allow-run --allow-env scripts/dev-setup.ts",
        "fmt": "cargo fmt --all",
        "clippy": "cargo clippy --all-targets --all-features -- -D warnings",
        "audit": "cargo audit",
        "test": "cargo test --verbose",
        "bench": "cargo bench",
        "doc": "cargo doc --open",
        "check-all": "deno task fmt && deno task clippy && deno task test && deno task audit"
    },
    "imports": {
        "@std/cli/parse-args": "jsr:@std/cli@^0.224.0/parse-args",
        "@std/fs/ensure-dir": "jsr:@std/fs@^0.224.0/ensure-dir",
        "@std/fmt/colors": "jsr:@std/fmt@^0.224.0/colors"
    }
}